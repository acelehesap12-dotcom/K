{
  "name": "@kk99/backend",
  "version": "1.0.0",
  "description": "KK99 Exchange - Backend API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src",
    "gen:docs": "swagger-cli bundle src/openapi/openapi.yaml -o docs/openapi.json"
  },
  "dependencies": {
    "fastify": "^4.25.2",
    "@fastify/cors": "^8.4.2",
    "@fastify/jwt": "^7.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "pg": "^8.11.3",
    "kysely": "^0.27.2",
    "@supabase/supabase-js": "^2.38.4",
    "kafkajs": "^2.2.4",
    "avsc": "^5.7.7",
    "node-vault": "^0.9.20",
    "redis": "^4.6.12",
    "axios": "^1.6.2",
    "ws": "^8.16.0",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "prom-client": "^15.0.0",
    "ethers": "^6.9.0",
    "bignumber.js": "^9.1.2",
    "decimal.js": "^10.4.3",
    "web3": "^4.2.1",
    "@solana/web3.js": "^1.87.6",
    "tronweb": "^4.4.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "tsx": "^4.7.0",
    "@types/node": "^20.10.5",
    "@types/ws": "^8.5.10",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "prettier": "^3.1.1"
  }
}
