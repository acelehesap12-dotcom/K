# Production Environment Variables
# Copy to .env.production and fill with real values

# ============ DATABASE ============
POSTGRES_DB=exchange_prod_db
POSTGRES_USER=exchange_admin
POSTGRES_PASSWORD=super_secure_password_change_this_12345

TIMESCALE_DB=timeseries_prod_db

# ============ REDIS ============
REDIS_PASSWORD=redis_secure_password_change_this

# ============ JWT ============
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ============ VAULT ============
VAULT_TOKEN=hvs.your_vault_root_token_here

# ============ API KEYS ============
# Binance
BINANCE_API_KEY=your_real_binance_api_key
BINANCE_API_SECRET=your_real_binance_secret_key

# Polygon.io
POLYGON_API_KEY=your_real_polygon_api_key

# Alchemy (Blockchain)
ALCHEMY_API_KEY=your_real_alchemy_api_key

# ============ FRONTEND ============
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
VITE_ENVIRONMENT=production

# ============ MONITORING ============
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password
GRAFANA_URL=https://grafana.yourdomain.com

# ============ DOMAIN ============
DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com

# ============ EMAIL (Optional) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# ============ SENTRY (Error Tracking - Optional) ============
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ============ RATE LIMITING ============
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_MS=60000

# ============ CORS ============
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
